rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all summary images for sharing
    match /summaries/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write *only* to their own folder within summaries.
    // This rule matches the nested path structure: /summaries/{userId}/{date}/{imageName}
    match /summaries/{userId}/{date}/{imageName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
