rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to their own bills folder
    match /bills/{billId}/{allPaths=**} {
      // Allow authenticated users to write (upload)
      allow write: if request.auth != null;

      // Allow anyone to read (public sharing)
      allow read: if true;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
