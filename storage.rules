rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow public read access to all generated summaries
    match /summaries/{allPaths=**} {
        allow read;
    }

    // Allow a user to write ONLY to their own designated folder within summaries.
    // e.g., summaries/USER_ID/some_image.png
    match /summaries/{userId}/{imageId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
