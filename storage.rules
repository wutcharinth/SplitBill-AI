
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to write to their own summary folder
    // and allow public read access for sharing the image URL.
    match /summaries/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read;
    }
  }
}
