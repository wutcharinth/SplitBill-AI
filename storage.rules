rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read the generated summary images for sharing
    match /summaries/{userId}/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write only to their own folder
    match /summaries/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
